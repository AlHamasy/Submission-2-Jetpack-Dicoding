<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_item_poster"
            android:layout_width="134dp"
            android:layout_height="200dp"
            android:contentDescription="@string/poster"
            android:scaleType="fitXY"
            android:src="@drawable/poster_movie_alita" />

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/img_item_poster"
            android:text="@string/title_here"
            android:textColor="@color/blue_100"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_item_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_title"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@+id/img_item_poster"
            android:fontFamily="@font/sourcesanspro_regular"
            android:text="@string/release_date"
            android:textColor="@color/blue_200" />

        <TextView
            android:id="@+id/tv_item_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_release_date"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/img_item_poster"
            android:fontFamily="@font/sourcesanspro_regular"
            android:justificationMode="inter_word"
            android:lines="6"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>